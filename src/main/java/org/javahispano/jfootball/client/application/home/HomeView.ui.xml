<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<b:Container>
		<b:Form type="HORIZONTAL">
			<b:FieldSet>
				<b:Legend>Ejemplo compilación y ejecución en GAE</b:Legend>

				<b:FormGroup>
					<b:FormLabel for="formCode" addStyleNames="col-lg-2">Código</b:FormLabel>
					<g:FlowPanel addStyleNames="col-lg-10">
						<b:TextArea ui:field="formCode" b:id="formCode"
							characterWidth="80" visibleLines="25">
							package
							org.javahispano.jfootball; 

							class Prueba implements Agent {
							public Prueba() {
							}

							public String execute() {
							return "Hola Mundo!";
							}
							}
						</b:TextArea>
					</g:FlowPanel>
				</b:FormGroup>

				<b:FormGroup>
					<g:FlowPanel addStyleNames="col-lg-offset-2 col-lg-10">
						<b:Button ui:field="send">Enviar</b:Button>
					</g:FlowPanel>
				</b:FormGroup>
			</b:FieldSet>
		</b:Form>
		<b:Lead text="Resultado de la compilación / ejecución"></b:Lead>
		<b.html:Paragraph ui:field="result"></b.html:Paragraph>
	</b:Container>
</ui:UiBinder>
